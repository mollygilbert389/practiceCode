<h1>Movies To Watch</h1>
<ul>
    {{#each movies}}
    <li>
        <p>ID: {{this.id}} Movie Title: {{this.movie}}</p>
        <form action="/delete?_method=DELETE" method="POST">
        <input type="hidden" name="id" value={{this.id}}>
        <button type="submit">Delete</button>
        </form>
    </li>
    {{/each}}
</ul>

<h2>Add A Movie to Watch</h2>
<form method="POST" action="/create">
    <textarea name="movie" type="text" cols="30" rows="10"
        placeholder="Type movie title here to add to the list."></textarea>
    <button type="submit">Save Movie</button>
</form>

<h2>Update a Movie</h2>
<form method="POST" action="/update?_method=PUT">
    <input type="text" name="id" placeholder="id">
    <textarea name="movie" type="text" cols="30" rows="10" placeholder="What do you want to update?"></textarea>
    <button type="submit">Update</button>
</form>